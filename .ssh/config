ControlMaster auto

Host localhost
    HostName 127.0.0.1
    ForwardAgent yes
    IdentityFile ~/.ssh/testls1043ardb


Host ci
    User ci
    RequestTTY force
    RemoteCommand zsh -i

Host ci-runner
    User gitlab-runner

Host ci-relay
    User relay

Host ci-raw
    User ci

Host ci ci-*
    HostName 192.168.10.8
    ControlPath ~/.ssh/ci-%h:%p:%r.ctl


Host *-ci* *-tunnel
    ProxyJump ci-relay
    ControlPath ~/.ssh/proxy-ci-%h:%p:%r.ctl

Host *-tunnel
    RemoteForward 3129 127.0.0.1:3128

Host *-zsh
    RequestTTY force
    RemoteCommand zsh -i

Host nanopi-ci nanopi-ci-zsh nanopi-ci-tunnel
    User pi
    HostName 192.168.64.2

Host raspberry-ci raspberry-ci-zsh raspberry-ci-tunnel
    User ci
    HostName 192.168.64.3


Host ls1043ardb ls1043ardb-* 192.168.18.6
    User root
    HostName 192.168.18.6
    StrictHostKeyChecking no

Host ls1043ardb-on-shelf
    ProxyJump nanopi-ci

